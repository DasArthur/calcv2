        exit = new JMenuItem("Exit");
        
        pap.add(exit);
        exit.addActionListener(this);
        //
        this.setVisible(true);
	}
    public void actionPerformed(ActionEvent e) {
  //clearButton
    	if(e.getSource() == clearButton){
        ansField.setText("");
        field.setText("");
    	multiClick = 0;
    	minClick = 0;
    	divClick = 0;
    	addClick = 0;
    	num1 = 0;
        num2 = 0;
        total = 0;
        num3 = 0;
    	}
    //zeroButton
        if(e.getSource() == zeroButton){
        	if(ansField.getText().length() < 8){
        	
        		if(ansField.getText().equals("")){
        			ansField.setText("0");
        		}else{
        			ansField.setText(ansField.getText() + "0");
        		}
        	}
        }	
    //oneButton
        if(e.getSource() == oneButton){
        	if(ansField.getText().length() < 8){
        		if(ansField.getText().equals("")){
        			ansField.setText("1");
        		}else{
        			ansField.setText(ansField.getText() + "1");
        		}
        	}
        }
    //twoButton
        if(e.getSource() == twoButton){
        	if(ansField.getText().length() < 8){
        		if(ansField.getText().equals("")){
        			ansField.setText("2");
        		}else{
        			ansField.setText(ansField.getText() + "2");
        		}
        	}
        }
    //threeButton
        if(e.getSource() == threeButton){
        	if(ansField.getText().length() < 8){
        		if(ansField.getText().equals("")){
        			ansField.setText("3");
        		}else{
        			ansField.setText(ansField.getText() + "3");
        		}
        	}
        }
    //fourButton
        if(e.getSource() == fourButton){
        	if(ansField.getText().length() < 8){
        		if(ansField.getText().equals("")){
        			ansField.setText("4");
        		}else{
        			ansField.setText(ansField.getText() + "4");
        		}
        	}
        }
    //fiveButton
        if(e.getSource() == fiveButton){
        	if(ansField.getText().length() < 8){
        		if(ansField.getText().equals("")){
        			ansField.setText("5");
        		}else{
        			ansField.setText(ansField.getText() + "5");
        		}
        	}
        }
    //sixButton
        if(e.getSource() == sixButton){
        	if(ansField.getText().length() < 8){
        		if(ansField.getText().equals("")){
        			ansField.setText("6");
        		}else{
        			ansField.setText(ansField.getText() + "6");
        		}
        	}
        }
     //sevenButton
        if(e.getSource() == sevenButton){
        	if(ansField.getText().length() < 8){
        		if(ansField.getText().equals("")){
        			ansField.setText("7");
        		}else{
        			ansField.setText(ansField.getText() + "7");
        		}
        	}
        }
      //eightButton
        if(e.getSource() == eightButton){
        	if(ansField.getText().length() < 8){
        		if(ansField.getText().equals("")){
        			ansField.setText("8");
        		}else{
        			ansField.setText(ansField.getText() + "8");
        		}
        	}
        }
      //nineButton
        if(e.getSource() == nineButton){
        	if(ansField.getText().length() < 8){
        		if(ansField.getText().equals("")){
        			ansField.setText("9");
        		}else{
        			ansField.setText(ansField.getText() + "9");
        		}
        	}
        }
      //PlusMinusButton
        try{
        if(e.getSource() == PlusMinusButton){
        	if(ansField.getText().contains(".")){
        		double lol = Double.parseDouble(String.valueOf(ansField.getText()));
        		lol *=-1;
        		ansField.setText(String.valueOf(lol));
        	}else{
        		int l = Integer.parseInt(String.valueOf(ansField.getText()));
        		l *=-1;
        		ansField.setText(String.valueOf(l));
        	}
        }
        }catch(Exception ex){
        	ansField.setText("Neizdevas Pievienot - ");
        }
      //komatPoga
        if(e.getSource() == komataButton){
        	if(ansField.getText().contains(".")){
        		
        	}else{
             ansField.setText(ansField.getText() + ".");
        	}
        }
      //addButton
        try{
        if(e.getSource() == addButton){
        	if(multiClick == 1){
        		field.setText(field.getText() + ansField.getText() + addButton.getText());
                num2 = Double.parseDouble(String.valueOf(ansField.getText()));
                		total = num1 * num2;
                    num1 = total;
                	minClick =0;
                	addClick = 1;
                	ansField.setText("");
                	multiClick = 0;
                	addClick = 1;
        }else if(divClick == 1){
        		field.setText(field.getText() + ansField.getText() + addButton.getText());
                num2 = Double.parseDouble(String.valueOf(ansField.getText()));
                		total = num1 / num2;
                    num1 = total;
                	minClick =0;
                	addClick = 1;
                	ansField.setText("");
                	divClick = 0;
                	addClick = 1;
        }else if(minClick == 1){
        	field.setText(field.getText() + ansField.getText() + addButton.getText());
        num2 = Double.parseDouble(String.valueOf(ansField.getText()));
        		total = num1 - num2;
            num1 = total;
        	minClick =0;
        	addClick = 1;
        	ansField.setText("");
        	minClick = 0;
        	addClick = 1;
        }else if(addClick == 0){
        		field.setText(field.getText() + ansField.getText() + addButton.getText());
            	num1 = Double.parseDouble(String.valueOf(ansField.getText()));
            	
            	ansField.setText("");
            	addClick = 1;
            	addCounter = 1;
        	}else if(addClick == 1 ){
        		field.setText(field.getText() + ansField.getText() + addButton.getText());
        		num4 = Double.parseDouble(String.valueOf(ansField.getText()));
        		
        		num3 = num1+num4;
        		num1 = num3;
            	ansField.setText("");
            	addClick = 1;
            	addCounter++;
        	}
        }
        }catch(Exception ex){
        	ansField.setText("Error");
        }
      //minButton
        try{
       
        	
         if(e.getSource() == minButton){
         if(multiClick == 1){
        	 field.setText(field.getText() + ansField.getText() + addButton.getText());
             num2 = Double.parseDouble(String.valueOf(ansField.getText()));
             		total = num1 * num2;
                 num1 = total;
             	ansField.setText("");
             	multiClick = 0;
             	minClick = 1;
         }else if(divClick == 1){
        	 field.setText(field.getText() + ansField.getText() + addButton.getText());
             num2 = Double.parseDouble(String.valueOf(ansField.getText()));
             		total = num1 / num2;
                 num1 = total;
           
             	ansField.setText("");
             	divClick = 0;
             	minClick = 1;
         }else if(addClick == 1){
        	 field.setText(field.getText() + ansField.getText() + addButton.getText());
             num2 = Double.parseDouble(String.valueOf(ansField.getText()));
             		total = num1 + num2;
                 num1 = total;
             	
             	ansField.setText("");
             	addClick = 0;
             	minClick = 1;
        	}else if(minClick == 0){
        		field.setText(field.getText() + ansField.getText() + minButton.getText());
            	num1 = Double.parseDouble(String.valueOf(ansField.getText()));
            	ansField.setText("");
            	minClick = 1;
        	}else if(minClick == 1){
        		
        		field.setText(field.getText() + ansField.getText() + minButton.getText());
            	num3 = Double.parseDouble(String.valueOf(ansField.getText()));
            	num4 = num1-num3;
            	num1 = num4;
            	ansField.setText("");
            	minClick = 1;
        	}
        	
        
        }
        
        }catch(Exception ex){
        	ansField.setText("Error");
        }
      //divButton
        try{
        	 if(e.getSource() == divButton){
        		 if(multiClick == 1){
                   	 field.setText(field.getText() + ansField.getText() + addButton.getText());
                        num2 = Double.parseDouble(String.valueOf(ansField.getText()));
                        		total = num1 * num2;
                            num1 = total;
                        	ansField.setText("");
                        	multiClick = 0;
                        	divClick = 1;
                    }else if(minClick == 1){
                   	 field.setText(field.getText() + ansField.getText() + addButton.getText());
                        num2 = Double.parseDouble(String.valueOf(ansField.getText()));
                        		total = num1 - num2;
                            num1 = total;
                        	ansField.setText("");
                        	minClick = 0;
                        	divClick = 1;
                    }else if(addClick == 1){
                   	 field.setText(field.getText() + ansField.getText() + addButton.getText());
                        num2 = Double.parseDouble(String.valueOf(ansField.getText()));
                        		total = num1 + num2;
                            num1 = total;
                        	ansField.setText("");
                        	addClick = 0;
                        	divClick = 1;
                   	}else if(divClick == 0){
        			field.setText(field.getText() + ansField.getText() + divButton.getText());
                	num1 = Double.parseDouble(String.valueOf(ansField.getText()));
                	ansField.setText("");
                	divClick = 1;
        		}else if(divClick == 1){
        			field.setText(field.getText() + ansField.getText() + divButton.getText());
            		num2 = Double.parseDouble(String.valueOf(ansField.getText()));
            		num3 = num1/num2;
            		num1 = num3;
                	ansField.setText("");
                	divClick = 1;
        		}	
        }
        
        }catch(Exception ex){
        	ansField.setText("Error");
        }
      //multiButton
        try{
        if(e.getSource() == multiButton){
        	if(divClick == 1){
              	 field.setText(field.getText() + ansField.getText() + multiButton.getText());
                   num2 = Double.parseDouble(String.valueOf(ansField.getText()));
                   		total = num1 / num2;
                       num1 = total;
                   	ansField.setText("");
                   	divClick = 0;
                   	multiClick = 1;
               }else if(minClick == 1){
              	 field.setText(field.getText() + ansField.getText() + multiButton.getText());
                   num2 = Double.parseDouble(String.valueOf(ansField.getText()));
                   		total = num1 - num2;
                       num1 = total;
                   	ansField.setText("");
                   	minClick = 0;
                   	multiClick = 1;
               }else if(addClick == 1){
              	 field.setText(field.getText() + ansField.getText() + multiButton.getText());
                   num2 = Double.parseDouble(String.valueOf(ansField.getText()));
                   		total = num1 + num2;
                       num1 = total;
                   	
                   	ansField.setText("");
                   	addClick = 0;
                   	multiClick = 1;
              	}else if(multiClick == 0){
        		field.setText(field.getText() + ansField.getText() + multiButton.getText());
            	num1 = Double.parseDouble(String.valueOf(ansField.getText()));
            	ansField.setText("");
            	multiClick = 1;
            
        	}else if(multiClick == 1){
        		field.setText(field.getText() + ansField.getText() + multiButton.getText());
            	num2 = Double.parseDouble(String.valueOf(ansField.getText()));
            	num3 = num1*num3;
            	num1 = num3;
            	ansField.setText("");
            	divClick = 1;
            	
        	}
        }
        }catch(Exception ex){
        	ansField.setText("Error");
        }
      //equalsButton
        try{
      if(e.getSource() == equalsButton){
    	  field.setText("");
    	  num2 = Double.parseDouble(String.valueOf(ansField.getText()));
    	  if(addClick == 1){
    		  ans = num1 +num2;
    		  ansField.setText(String.valueOf(ans));
    		  
    	  }else if(multiClick == 1){
    		  ans = num1 * num2;
    		  ansField.setText(String.valueOf(ans));
    		  num1 = 0;
    	        num2 = 0;
    	  }else if(divClick == 1){
    		  ans = num1 / num2;
    		  ansField.setText(String.valueOf(ans));
    		  num1 = 0;
    	        num2 = 0;
    	  }else if(minClick == 1){
    		  ans = num1 - num2;
    		  ansField.setText(String.valueOf(ans));
    		  num1 = 0;
    	        num2 = 0;
    	  }
      }  
        }catch(Exception ex){
        	ansField.setText("Error");
        }
        try{
        if(e.getSource() == kvadr){
        	if(ansField.getText().length() < 6){
        		double kv = Double.parseDouble(String.valueOf(ansField.getText()));
        		
        		double kv2 = Math.sqrt(kv);
        		
        		ansField.setText(String.valueOf(kv2));
        	}
        }
        if(e.getSource() == cos){
        	if(ansField.getText().length() < 6){
        		double kv = Double.parseDouble(String.valueOf(ansField.getText()));
        		
        		double kv2 = Math.cos(kv);
        		
        		ansField.setText(String.valueOf(kv2));
        	}
        }
        if(e.getSource() == tang){
        	if(ansField.getText().length() < 6){
        		double kv = Double.parseDouble(String.valueOf(ansField.getText()));
        		
        		double kv2 = Math.tan(kv);
        		
        		ansField.setText(String.valueOf(kv2));
        	}
        }
        }catch(Exception ex){
        	ansField.setText("Error");
        }
        if(e.getSource() == melna){
        	panel.setBackground(Color.BLACK);
        	
        }
        if(e.getSource() == dzeltana){
        	panel.setBackground(Color.YELLOW);
        }
        if(e.getSource() == zila){
        	panel.setBackground(Color.BLUE);
        }
        if(e.getSource() == arial){
          ansField.setFont(a);
        }
        if(e.getSource() == Comic){
        	ansField.setFont(c);
        }
        if(e.getSource() == exit){
        	System.exit(0);
        }
	}
  
    
	
	public static void main(String[] args) {
		
		new calc();
	
		
		
		
	}

	
	

}
